
<div class="d-flex justify-content-center m-5">
	<h1>welcome to Category Page</h1>
</div>


@* to render temp data*@
<partial  name="_notification" ></partial>


<div class="container">

    <div class="row p-4">

        <div class="col-6 text-warning">  category </div>
        <div class="col-6 text-end ">
            <a class="nav-link text-warning fs-5" asp-controller="Catogary" asp-action="CreateCategory">  <i class="bi bi-patch-plus"></i>  &nbsp; Add New Category</a>
        </div>

    </div>

</div>

<table class="table">
    <thead>
        <tr>
            
            <th scope="col">Id</th>
            <th scope="col">cat name</th>
            <th scope="col">Displayed order</th>
            <th scope="col">createdDateTime</th>
            <th scope="col">Action</th>
            
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tbody>
            <tr>
               
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.DisplayedOrder</td>
                <td>@item.createdDateTime</td>
                @* to pass id like /Catogary/EditCategory/2*@
                <td class="justify-content-around">
                    <a class="text-warning px-4" asp-controller="Catogary" asp-action="EditCategory" asp-route-id="@item.Id"> <i class="bi bi-pen"></i>  Edit</a>
                    <a class="text-danger asp-controller="Catogary" asp-action="DeleteCategory" asp-route-id="@item.Id"> <i class="bi bi-trash"></i> Delete</a>

                </td>

                
             
            </tr>
            
        </tbody>
        
    }
   
</table>