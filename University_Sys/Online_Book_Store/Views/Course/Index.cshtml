@*@model List<Course>*@

<div class="d-flex justify-content-center m-5">
    <h1>welcome to Course Page</h1>
</div>

@* to render temp data*@
<partial name="_notification"></partial>

<div class="container">

    <div class="row p-4">

        <div class="col-6 text-warning">  </div>
        <div class="col-6 text-end ">
            <a class="nav-link text-warning fs-5" asp-controller="course" asp-action="AddCourse">  <i class="bi bi-plus-circle"></i>  Add New Course</a>
        </div>

    </div>

</div>

<table class="table">
    <thead>
        <tr>

            <th scope="col">Id</th>
            <th scope="col"> Name</th>
            <th scope="col">Degree</th>
            <th scope="col">Min_Degree</th>
            <th scope="col">Dept_Id</th>
            <th scope="col">Actions</th>



        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tbody>
            <tr>

                <td>@item.courseid</td>
                <td>@item.coursename</td>
                <td>@item.coursedegree</td>
                <td>@item.coursemindegree</td>
                <td>@item.deptname</td>
                
                <td class="justify-content-around">
                
                    <a class=" text-info p-4" asp-controller="Course" asp-action="edit" asp-route-id="@item.courseid"> <i class="bi bi-pen"></i>Edit</a>
                    <a class=" text-danger" asp-controller="Course" asp-action="delete" asp-route-id="@item.courseid"> <i class="bi bi-trash3"></i>Delete</a>
                </td>

            </tr>

        </tbody>

    }

</table>
